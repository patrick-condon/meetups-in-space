<h1><%= @meetup.name %></h1>
<h5>Created By: <%= @meetup.creator %></h5>
<h4>Location: <%= @meetup.location %></h4>
<p><%= @meetup.description %></p>
<h4>Attendees:</h4>
<ul>
  <% @meetup.users.each do |user| %>
    <li><img src="<%= user.avatar_url %>" width="50px" height="50px"/> - <%= user.username %></li>
  <% end %>
</ul>
<% if @errors != [] %>
   <ul class="error">
     <% @errors.each do |error| %>
      <h3><%= error %></h3>
      <% end %>
   </ul>
 <% end %>
<form action="/meetups/<%= @meetup.id %>/join" method="post">
<button type="submit" formmethod="post">Click Here to Join Meetup!</button>
</form>
